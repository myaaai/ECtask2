

   
<div class="container">
 <div class="row">
  <div class="col-sm-12col-md-8 col-lg-11 px-5 px-sm-0 mx-auto">

  <h2>会員一覧</h2>
    <table class="table table-hover table-inverse">
	    <thead>
			<tr>
				<th>会員ID</th>
				<th>氏名</th>
				<th>メールアドレス</th>
				<th>ステータス</th>
			</tr>
		</thead>

		<tbody>
			<% @customer.each do |customer| %>
				<tr>
					<td><%= customer.id %></td>
					<td style>
						<%= link_to customer.first_name, admin_customer_path(customer.id)%>
						<%= link_to customer.last_name, admin_customer_path(customer.id) %>
					</td>
	  				<td> <%= customer.email %></td>
					<td><% if customer.is_deleted %>
					        退会
					    <% else %>
					        有効
					    <% end %>
					</td>
				</tr>
			<% end %>
		
		</tbody>
	</table>
</div>