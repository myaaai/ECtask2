
<div class="container">
 <div class="row">
  <div class="col-sm-12col-md-8 col-lg-11 px-5 px-sm-0 mx-auto">


<h3>商品一覧</h3>
 	 <%= link_to "新規登録", new_admin_item_path, class: "btn btn-primary mr-5 mb-3" %>

 <table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜き価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
     
    </tr>
  </thead>
   <tbody>
	 	<% @items.each do |item| %>
			<tr>
				<th><%= item.id %></th>
				<th><%= link_to item.name, admin_item_path(item) %></th>
				<th><%= item.price %></th>
				<th><%= item.genre.name %></th>
				<th><% if item.is_active == true %>
					販売中
					<% else %>
					販売停止中
					<% end %>
				</th>
			</tr>
		<% end %>
	</tbody>
 
  </table>

