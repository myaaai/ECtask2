<div class="container">
 <div class="row">
  <div class="col-sm-12col-md-8 col-lg-11 px-5 px-sm-0 mx-auto">

  <h2>注文履歴一覧</h2>
    <table class="table table-hover table-inverse">
	    <thead>
			<tr>
				<th>購入日時 </th>
				<th>購入者</th>
				<th>注文個数 </th>
			</tr>
		</thead>

		<tbody>
            <%  @orders.each do |order| %>
              <tr>
                <td><%=link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(order) %></td>
                <td><%= order.customer.first_name %><%= order.customer.last_name %></td>
                <td>
                  <% @sum  = 0 %>
                  <% order.ordered_items.all.each do |ordered_item|  %>
                    <% @amount = ordered_item.amount  %>
                    <% @sum += @amount %>
                  <% end %>
                  <%= @sum %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>