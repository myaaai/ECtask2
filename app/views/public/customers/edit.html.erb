<div class=“row”>
	<div class = "body" style>
		<div class = "container">
		  
<h3>会員情報編集</h3>
<%= form_with model: @customer, url: customers_path do |f| %>

 	<div class="field">
				    <%= f.label :氏名 %><br>
				    <%= f.label :（姓） %>
				    <%= f.text_field :first_name, autofocus: true, autocomplete: "email" %>
				    <%= f.label :（名） %>
				    <%= f.text_field :last_name, autofocus: true, autocomplete: "email" %>
				 </div>

				 <div class="field">
				    <%= f.label :フリガナ %><br />
				    <%= f.label :（セイ） %>
				    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "email" %>
				    <%= f.label :（メイ） %>
				    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "email" %>
				 </div>

				 <div class="field">
				    <%= f.label :郵便番号（ハイフンなし） %><br />
				    <%= f.text_field :postal_code, autofocus: true, autocomplete: "email" %>
				 </div>

				 <div class="field">
				    <%= f.label :住所 %><br />
				    <%= f.text_field :address, autofocus: true, autocomplete: "email", size: "80" %>
				 </div>

				 <div class="field">
				    <%= f.label :電話番号（ハイフンなし） %><br />
				    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "email" %>

				 <div class="field">
				    <%= f.label :メールアドレス %><br />
				    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
				 </div>

        
       
            <%= f.submit "編集内容を保存する", class: "btn btn-success mt-3 mr-5" %>
 
      
      <% end %>
      
      <%= link_to "退会する", withdraw_path(@customer), class: "btn btn-danger mt-3" %>
      </div>
	</div>
</div>
  
