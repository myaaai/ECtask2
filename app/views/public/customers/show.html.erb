<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-8 px-5 px-sm-0 mx-auto">

<!--<div class="row login-row">-->
      <h3>マイページ</h3>
      <div class="col-xs-14 col-xs-offset-1"style="margin-top: 50px;">
       <div class="row">
      <h4>登録情報</h4>
  			<%= link_to "編集する", edit_customers_path(@customer), class: "btn btn-success genre-submit ml-5 mb-3"%>&ensp;

		


        <table class="table table-bordered">
          <thead>
            <tr class="table-head" style="background-color:#F5F5F5;">
              <th scope="col">氏名</th>
              <td style><%= @customer.first_name %>&ensp;<%= @customer.last_name %></td>
          </tr>
          <tr class="table-head" style="background-color:#F5F5F5;">
              <th scope="col">カナ</th>
              <td style><%= @customer.first_name_kana %>&ensp;<%= @customer.last_name_kana %></td>
          </tr>
          <tr class="table-head" style="background-color:#F5F5F5;">
              <th scope="col">郵便番号</th>
              <td style><%= @customer.postal_code %></td>
          </tr>
          <tr class="table-head" style="background-color:#F5F5F5;">
              <th scope="col">住所</th>
              <td style><%= @customer.address %></td>
          </tr>
          <tr class="table-head" style="background-color:#F5F5F5;">
              <th scope="col">電話番号</th>
              <td style><%= @customer.telephone_number %></td>
          </tr>
          <tr class="table-head" style="background-color:#F5F5F5;">
              <th scope="col">メールアドレス</th>
              <td style><%= @customer.email %></td>
          </tr>
          </thead>
	 </div>
	</table>

<h4>配送先</h4>
	  <%= link_to "一覧を見る", shipping_addresses_path, class: "btn btn-primary ml-3 mr-5" %></br>
<h4>注文履歴</h4>
	   <%= link_to "一覧を見る", orders_path, class: "btn btn-primary ml-3" %>
</div>
