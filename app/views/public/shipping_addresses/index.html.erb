<div class=“row”>
	<div class = "body" style>
		<div class = "container">

<h3>配送先登録/一覧</h3>

<%= form_with model: @shipping_address, url: shipping_addresses_path do |f| %>
	<div class="field">
	    <%= f.label :郵便番号（ハイフンなし） %><br />
		<%= f.text_field :postal_code, autofocus: true, autocomplete: "email" %>
    </div>

	<div class="field">
		<%= f.label :住所 %><br />
		<%= f.text_field :address, autofocus: true, autocomplete: "email" %>
	</div>
	<div class="field">
	    <%= f.label :宛名 %><br />
		<%= f.text_field :name, autofocus: true, autocomplete: "email" %>
	</div>
	
	 <%= f.submit "新規登録", class: 'btn btn-success mb-3 mt-3' %>
<% end %>

<table class="table table-bordered address-table">
			<thead>
				<tr class="table-head" style="background-color:#F5F5F5;">
					<th>郵便番号</th>
					<th>住所</th>
					<th>宛名</th>
					<th>&nbsp;</th>
					<th>&nbsp;</th>
				</tr>
			</thead>
			<tbody>
				<% @shipping_addresses.each do |shipping_address|  %>
					<tr>
						<td><%= shipping_address.postal_code %></td>
						<td><%= shipping_address.address %></td>
						<td><%= shipping_address.name %></td>
						<td><%= link_to "編集する", edit_shipping_address_path(shipping_address.id),class: "btn btn-primary ml-3"%></td>
						<td><%= link_to "削除する", shipping_address_path(shipping_address.id),  class: "btn btn-danger ml-3", method: :delete %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>