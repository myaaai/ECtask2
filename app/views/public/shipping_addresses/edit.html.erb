<div class=“row”>
	<div class = "body" style>
		<div class = "container">

<h3>配送先編集</h3>

<%= form_with model: @shipping_address, url: shipping_addresses_path do |f| %>
	<div class="field">
	    <%= f.label :郵便番号（ハイフンなし） %><br />
		<%= f.text_field :postal_code, autofocus: true, autocomplete: "email" %>
    </div>

	<div class="field">
		<%= f.label :住所 %><br />
		<%= f.text_field :address, autofocus: true, autocomplete: "email" %>
	</div>
	<div class="field">
	    <%= f.label :宛名 %><br />
		<%= f.text_field :name, autofocus: true, autocomplete: "email" %>
	</div>
	
	
	
	 <%= f.submit "変更内容を保存", class: 'btn btn-success mt-3 mb-3' %>
	 
	 <% end %>
	 
</div>
</div>
</div>
