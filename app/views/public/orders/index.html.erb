<div class="container">
<div class="row">
  <div class="col-sm-12col-md-8 col-lg-11 px-5 px-sm-0 mx-auto">
  <h2>注文履歴一覧</h2>
  
  <div class="row">
		<table class="table table-bordered cart-table">
			<thead class="thead-light">
			    <tr style="background-color:#F5F5F5;">
					<th>注文日</th>
					<th>配送先</th>
					<th>注文商品</th>
					<th>支払金額</th>
					<th>注文詳細</th>
			</thead>
		<tbody>
            <% @orders.each do |order| %>
            
                <tr>
                  <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
                  <td>
                    <p><%= order.postal_code %>&emsp;<%= order.shipping_address %></p>
                    <p><%= order.name %></p>
                  </td>
                  <td>
                  <% order.ordered_items.each do |i| %>
                    <p><%= i.item.name %></p>
                  <% end %>
                  </td>
                  <td><%= order.amount_claimed %>円</td>
          
                  <td>
                  <%= link_to "表示する", order, class: 'btn btn-primary' %>
                  </td>
                
              <% end %>
          </tbody>
		</table>